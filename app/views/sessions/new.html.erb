<div class="user-register container mt-3">
  <div class="d-flex justify-content-center h-100">
    <%= form_tag login_path do |f| %>
      <div class="input-group form-group">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-user"></i></span>
        </div>
        <%= text_field_tag :username, nil, placeholder: 'username' %>
      </div>

      <div class="input-group form-group">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-key"></i></span>
        </div>
        <%= password_field_tag :password, nil, placeholder: 'password' %>
      </div>

      <div class="form-group d-flex justify-content-between">
        <%= link_to 'register', register_path, class: 'btn btn-outline-primary' %>
        <%= submit_tag 'login', class: 'btn btn-outline-dark' %>
      </div>
    <% end %>
      
  </div>
</div>