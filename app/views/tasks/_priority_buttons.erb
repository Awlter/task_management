<%- Task::WEIGHTED_PRIORITY.each do |priority, weight| %>
  <label class="col">
    <%= radio_button_tag "task[priorities][#{priority}]", '', true %>
    Not <%= priority.capitalize %>
  </label>
  <label class="col">
    <%= radio_button_tag "task[priorities][#{priority}]", weight %>
    <%= priority.capitalize %>
  </label>
<% end %>
