<div class='list tasks-list'>
  <div class='w-75 mx-auto mt-5'>
    <div class="list-group">
      <div class="bg-info d-flex align-items-center">
        <h3 class='p-2 my-0 mx-3 text-light flex-grow-1'>Tasks</h3>
        <div class='d-flex align-items-center mr-3'>
          <%= label_tag :show_closed do %>
            <%= check_box_tag :show_closed, nil, show_closed_tasks? %>
            <span class='text-white font-weight-bold'>show closes tasks</span>
          <% end %>
        </div>
      </div>
      <%= render 'tasks' %>
    </div>

    <%= form_for Task.new, remote: true, html: { class: 'd-flex align-items-end mt-5' } do |f| %>
      <div class='w-100'>
        <label for="basic-url">Enter your task</label>
        <%= f.text_field :description, placeholder: 'description', class: 'form-control' %>
      </div>

      <%= f.submit 'ADD', class: 'btn btn-primary mx-3', data: { "disable-with": "Add..." } %>

      <div class="row row-cols-<%= Task::WEIGHTED_PRIORITY.count %>">
        <%= render 'priority_buttons' %>
      </div>
    <% end %>
  </div>
</div>